
@{
    ViewBag.Title = "Index";
}

@{
    if (TempData["ResponseMsg"] != null)
    {
        <div class="alert alert-@(TempData["Type"].ToString().ToLower())" role="alert">
            @TempData["ResponseMsg"]
        </div>
    }
}

<div class="jumbotron">
    @{
        if (ViewBag.Type != null && ViewBag.Type.ToString() == "NGO")
        {
            @Html.ActionLink("Food Operations", "GetFoodList", "Food", null, new { @class = "btn btn-success" });
        }

        if (ViewBag.Type.ToString() == "Restaurant")
        {
            @Html.ActionLink("Add Foods", "AddFood", "Food", null, new { @class = "btn btn-success" });
            @Html.ActionLink("All Foods", "Index", "Food", null, new { @class = "btn btn-success" });
        }
    }
</div>
